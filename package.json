{
  "name": "harmonyforge",
  "version": "1.0.0",
  "description": "HarmonyForge - Full-Stack Music Harmonization Application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "verify-instruments": "node scripts/verify-instruments.cjs",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/node_modules node_modules"
  },
  "keywords": [
    "music",
    "harmonization",
    "fullstack",
    "chamber-music"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
